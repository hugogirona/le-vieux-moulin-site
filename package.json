{
  "name": "lvm",
  "version": "1.0.0",
  "description": "Réalisation d'un site pour l'ASBL SRG le Vieux Moulin dans le cadre du cours de design web à la HEPL.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "watch": "chokidar './wp-content/themes/LVM/resources/js/app/**/*.js' './wp-content/themes/LVM/resources/css/**/*' -c 'vite build'",
    "serve": "browser-sync start --proxy 'http://le-vieux-moulin-site.test' --files 'wp-content/themes/LVM/public/**/*' --no-https --port 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugogirona/le-vieux-moulin-site.git"
  },
  "author": "Hugo Girona",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hugogirona/le-vieux-moulin-site/issues"
  },
  "homepage": "https://github.com/hugogirona/le-vieux-moulin-site#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.3",
    "chokidar-cli": "^3.0.0",
    "glob": "^11.0.1",
    "postcss": "^8.5.3",
    "sass": "^1.86.0",
    "vite": "^6.2.2"
  },
  "browserslist": [
    "last 2 versions",
    "iOS >= 10",
    "IE 11",
    "not IE 10",
    "Firefox ESR",
    "Chrome >= 50",
    "Android >= 4.4",
    "Safari >= 9"
  ]
}
